# ==============================================
# CrowdWorks Multiagent System Environment Configuration
# ==============================================

# ==================== API KEYS ====================
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API Configuration (Primary and Backup Keys)
GEMINI_API_KEY_1=your_gemini_api_key_1_here
GEMINI_API_KEY_2=your_gemini_api_key_2_here

# Google API Key for services (fallback)
GOOGLE_API_KEY=your_google_api_key_here

# Serper API Key for web search
SERPER_API_KEY=your_serper_api_key_here

# LangSmith API Key for monitoring
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Cohere API Key for embeddings
COHERE_API_KEY=your_cohere_api_key_here

# PubMed API Key for medical research
PUBMED_API_KEY=your_pubmed_api_key_here

# KAMIS API for agricultural data
KAMIS_API_KEY=your_kamis_api_key_here
KAMIS_API_ID=your_kamis_api_id_here

# CrowdWorks API Key
CROWD_API_KEY=your_crowd_api_key_here

# ==================== EVALUATION API KEYS ====================
# Evaluation-specific API keys for multi-model ensemble evaluation
EVALUATION_OPENAI_API_KEY=your_evaluation_openai_api_key_here
EVALUATION_CLAUDE_API_KEY=your_evaluation_claude_api_key_here
# Gemini evaluation uses GEMINI_API_KEY_1 (same as main system)

# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL Database (Main Database)
POSTGRES_DB=crowdworks_db
POSTGRES_USER=crowdworks_user
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Alternative Database Configuration for Backend
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crowdworks_db
DB_USER=crowdworks_user
DB_PASSWORD=your_db_password_here

# ==================== ELASTICSEARCH CONFIGURATION ====================
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_here
ELASTICSEARCH_HOST=http://elasticsearch:9200

# ==================== NEO4J CONFIGURATION ====================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ==================== FRONTEND CONFIGURATION ====================
# Next.js API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# ==================== FEATURE FLAGS ====================
# Enable React Agent functionality
USE_REACT_AGENT=true

# Enable LangGraph Workflow (LangSmith tracing, parallel search)
# true: Use LangGraph with enhanced observability
# false: Use legacy workflow (stable fallback)
USE_LANGGRAPH=false